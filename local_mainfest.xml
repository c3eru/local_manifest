<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android">

	<remote
		name="me"
		fetch="https://github.com/c3eru"/>

	<remote
		name="Jabiyeff"
		fetch="https://github.com/Jabiyeff"/>

	<remote
		name="ssosd"
		fetch="https://github.com/SuperiorOS-Devices"/>

	<project
		path="device/xiaomi/spes"
		name="device_xiaomi_spes"
		remote="ssosd"
		revision="thirteen"/>

	<project
		path="vendor/xiaomi/spes"
		name="vendor_xiaomi_spes"
		remote="ssosd"
		revision="thirteen"/>

	<project
		path="kernel/xiaomi/spes"
		name="kernel_xiaomi_spes"
		remote="ssosd"
		revision="thirteen"/>

	<remove-project
		name="android_hardware_lineage_compat"/>

	<project
		path="hardware/xiaomi"
		name="hardware_xiaomi"
		remote="me"
		revision="13"
		clone-depth="1"/>

</manifest>


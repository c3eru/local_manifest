<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android">

	<remote
		name="pixel-devices-blobs"
		fetch="https://gitlab.pixelexperience.org/android/vendor-blobs"
		revision="thirteen"/>

	<remote
		name="kdrag0n"
		fetch="https://github.com/kdrag0n"/>

	<remote
		name="c3eru"
		fetch="https://github.com/c3eru"/>

	<remote
		name="xd"
		fetch="https://github.com/xdroid-oss"
		revision="thirteen"/>

	<remote
		name="derp"
		fetch="https://github.com/DerpFest-AOSP"
		revision="13"/>

	<remote
		name="pixel-devices"
		fetch="https://github.com/PixelExperience-Devices"
		revision="thirteen"/>

	<remote name="pixel"
          fetch="https://github.com/PixelExperience"
          revision="thirteen"
          review="gerrit.pixelexperience.org" />

	<project
		path="device/xiaomi/chime"
		name="android_device_xiaomi_chime"
		remote="c3eru"
		revision="thirteen"
		clone-depth="1"/>

	<project
		path="vendor/xiaomi/chime"
		name="vendor_xiaomi_chime"
		remote="pixel-devices-blobs"
		clone-depth="1"/>

	<project
		path="vendor/xiaomi/citrus"
		name="vendor_xiaomi_citrus"
		remote="pixel-devices-blobs"
		clone-depth="1"/>

	<project
		path="vendor/xiaomi/lime"
		name="vendor_xiaomi_lime"
		remote="pixel-devices-blobs"
		clone-depth="1"/>

	<project
		path="kernel/xiaomi/chime"
		name="kernel_xiaomi_chime"
		remote="pixel-devices"
		clone-depth="1"/>

	<project
		path="prebuilts/clang/host/linux-x86/clang-proton"
		name="proton-clang"
		remote="kdrag0n"
		revision="master"
		clone-depth="1"/>

	<remove-project
		name="android_hardware_lineage_compat"/>

	<project
		path="hardware/xiaomi"
		name="hardware_xiaomi"
		remote="pixel"/>

	<remove-project
		name="frameworks_base"/>

	<project
		path="frameworks/base"
		name="fw"
		groups="pdk-cw-fs,pdk-fs"
		remote="c3eru"
		revision="derp-ds"
		clone-depth="1"/>

</manifest>

